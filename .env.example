# ========================================
# Tatra Trails - Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ========================================
# WordPress Backend Configuration
# ========================================

# WordPress GraphQL API Endpoint
# Format: https://your-wordpress-site.com/graphql
WORDPRESS_API_URL=https://your-wordpress-site.com/graphql

# WordPress REST API Base URL (for comments, contact form)
# Format: https://your-wordpress-site.com/wp-json
WORDPRESS_REST_API_URL=https://your-wordpress-site.com/wp-json

# WordPress Application Password (for write operations like comments)
# Generate from: WordPress Admin → Users → Profile → Application Passwords
# Format: username:password_hash
WORDPRESS_AUTH_USERNAME=
WORDPRESS_AUTH_PASSWORD=

# ========================================
# Google Maps Integration
# ========================================

# Google Maps JavaScript API Key
# Get from: https://console.cloud.google.com/apis/credentials
# Required APIs: Maps JavaScript API, Geocoding API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Maps Map ID (optional, for advanced styling)
NEXT_PUBLIC_GOOGLE_MAPS_MAP_ID=

# ========================================
# Analytics & Tracking
# ========================================

# Google Analytics 4 Measurement ID
# Get from: https://analytics.google.com/
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Google Tag Manager ID (optional)
# Format: GTM-XXXXXXX
NEXT_PUBLIC_GTM_ID=

# ========================================
# Advertising & Monetization
# ========================================

# Google AdSense Publisher ID
# Get from: https://www.google.com/adsense/
# Format: ca-pub-XXXXXXXXXXXXXXXX
NEXT_PUBLIC_ADSENSE_PUBLISHER_ID=

# Amazon Associates Affiliate ID
# Format: yourname-20
NEXT_PUBLIC_AMAZON_AFFILIATE_ID=

# ========================================
# Email & Contact Form
# ========================================

# SendGrid API Key (for contact form emails)
SENDGRID_API_KEY=

# Contact form recipient email
CONTACT_EMAIL=your-email@example.com

# ========================================
# Next.js Configuration
# ========================================

# Site URL (production domain)
# Used for SEO, canonical URLs, sitemap generation
NEXT_PUBLIC_SITE_URL=https://tatra-trails.com

# Default language (pl or en)
NEXT_PUBLIC_DEFAULT_LOCALE=pl

# Available languages (comma-separated)
NEXT_PUBLIC_LOCALES=pl,en

# ========================================
# Security
# ========================================

# NextAuth Secret (if using authentication in future)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=

# CORS Allowed Origins (comma-separated)
# WordPress should allow these origins to access WPGraphQL
ALLOWED_ORIGINS=http://localhost:3000,https://your-vercel-domain.vercel.app

# ========================================
# Performance & Caching
# ========================================

# Incremental Static Regeneration (ISR) Revalidation Time (seconds)
# Default: 60 (1 minute)
REVALIDATE_TIME=60

# Redis Cache URL (optional, for advanced caching)
REDIS_URL=

# ========================================
# Development & Debugging
# ========================================

# Node Environment (development, production, test)
NODE_ENV=development

# Enable debug mode (true/false)
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ========================================
# Optional Integrations
# ========================================

# Cloudinary (for advanced image optimization)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Mailchimp (for newsletter in future)
MAILCHIMP_API_KEY=
MAILCHIMP_LIST_ID=

# Sentry DSN (for error tracking)
SENTRY_DSN=

# ========================================
# Notes
# ========================================
#
# REQUIRED for MVP:
# - WORDPRESS_API_URL
# - NEXT_PUBLIC_GOOGLE_MAPS_API_KEY
# - NEXT_PUBLIC_SITE_URL
#
# OPTIONAL for MVP:
# - Analytics IDs (can add after launch)
# - AdSense/Affiliate IDs (for monetization)
# - Email service (contact form can use WordPress plugins)
#
# SECURITY REMINDERS:
# - Add .env to .gitignore (already included)
# - Never expose API keys in client-side code (use NEXT_PUBLIC_ prefix only when necessary)
# - Rotate keys regularly
# - Use different keys for development and production
# - Store production secrets in Vercel dashboard, not in .env
